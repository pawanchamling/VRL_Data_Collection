<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_start_session"
        android:id="@+id/button_start_session"
        android:onClick="startActivitySession"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/button_saved_sessions"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_settings"
        android:id="@+id/button_settings"
        android:layout_below="@+id/button_saved_sessions"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/button_saved_sessions"
        android:layout_alignStart="@+id/button_saved_sessions"
        android:layout_alignRight="@+id/button_saved_sessions"
        android:layout_alignEnd="@+id/button_saved_sessions" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_saved_sessions"
        android:id="@+id/button_saved_sessions"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_start_session"
        android:layout_alignStart="@+id/button_start_session" />



</RelativeLayout>
